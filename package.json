{
	"name": "histoire-sveltekit",
	"version": "0.0.1",
	"private": true,
	"packageManager": "pnpm@7.30.0",
	"description": "Template repository for new projects with support to Histoire, SvelteKit, Typescript, Plop, Vitest and Tailwind CSS.",
	"author": "indaco <github@mircoveltri.me>",
	"license": "MIT",
	"scripts": {
		"dev": "svelte-kit sync && vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "svelte-kit sync && vite preview",
		"story": "svelte-kit sync && histoire dev",
		"story:build": "svelte-kit sync && histoire build",
		"story:preview": "svelte-kit sync && histoire preview",
		"test": "svelte-kit sync && vitest run",
		"test:watch": "svelte-kit sync && vitest watch",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@histoire/controls": "^0.15.9",
		"@histoire/plugin-svelte": "^0.15.9",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.15.4",
		"@sveltejs/vite-plugin-svelte": "^2.0.4",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"autoprefixer": "^10.4.14",
		"c8": "^7.13.0",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"flexsearch": "^0.7.31",
		"histoire": "^0.15.9",
		"jsdom": "^20.0.3",
		"plop": "^3.1.2",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"shiki-es": "^0.2.0",
		"svelte": "^3.58.0",
		"svelte-check": "^3.2.0",
		"svelte-preprocess": "^5.0.3",
		"tailwindcss": "^3.3.1",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"vitest": "^0.30.1",
		"vscode-oniguruma": "^1.7.0",
		"vscode-textmate": "^9.0.0"
	},
	"type": "module"
}
